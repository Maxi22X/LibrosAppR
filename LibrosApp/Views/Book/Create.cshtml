@model LibrosApp.Models.Book

@{ 
    ViewData["Title"] = "Crear Nuevo Libro";
}

<h1>Crear Nuevo Libro para el Autor: @ViewBag.AuthorName</h1>

<form asp-action="SaveBook" method="post">
    <input type="hidden" name="AuthorId" value="@ViewBag.AuthorId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PublicationYear"></label>
        <input asp-for="PublicationYear" class="form-control" />
        <span asp-validation-for="PublicationYear" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear Libro</button>
</form>
